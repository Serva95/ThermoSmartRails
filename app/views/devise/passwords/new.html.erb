
<h2>Password dimenticata?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "row", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-6 col-12-mobile">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="col-12 col-12-mobile"><br></div>

  <div class="col-6 col-12-mobile">
    <%= f.submit "Invia le istruzioni per resettare la password" %>
  </div>
<% end %>
<div class="col-12 col-12-mobile"><hr></div>
<div class="row 50%">
  <%= render "devise/shared/links" %>
</div>