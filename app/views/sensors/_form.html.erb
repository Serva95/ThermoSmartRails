  <div class="col-6 col-12-mobile">
    <%= form.label :location, "Posizione del sensore"%>
    <%= form.text_field :location, placeholder: "Posizione del sensore" %>
  </div>

  <div class="col-6 col-12-mobile">
    <%= form.label :id, "ID del sensore"%>
    <%= form.text_field :id, placeholder: "ID del sensore" %>
  </div>

  <div class="col-12 col-12-mobile"><br></div>

  <div class="col-12 col-12-mobile">
    <%= form.submit "Salva il sensore" %>
  </div>
<% end %>
